extends ../layout

block content
  .auth-form
    form(method='POST')
      h3=t('auth.verifyEmailCode')
      .form-group 
        input(type="text" class="form-control" id="email" name="email" placeholder=t('auth.email'))
      .form-group
        button.btn.btn-block.create-account(type='submit')= t('auth.submit')
